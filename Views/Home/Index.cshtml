@using Microsoft.AspNet.Identity
@using Carreno_Financial_Portal.Models

@model Carreno_Financial_Portal.Models.Household

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card card primary card-outline">
                <div class="card-header p-0 pt-1 border-bottom-0">
                    <h1 style="text-align:center"> Houshold setup</h1>
                    <ul class="nav nav-tabs" id="custom-tabs-two-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="pill" href="#group-section" role="tab" arial-controls="group-section" arial-selected="true">Group</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="bank-tab" data-toggle="pill" href="#bank-section" role="tab" arial-controls="bank-section" arial-selected="false">Bank</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="cat-tab" data-toggle="pill" href="#category-section" role="tab" arial-controls="category-section" arial-selected="false">Category</a>
                        </li>


                    </ul>
                </div>


                @using (Html.BeginForm("Create", "Households", FormMethod.Post, new { id = "userForm" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="card-body">
                        <div class="tab-content" id="custom-tabs-two-tabcontent">
                            <div class="tab-pane fade active show" id="group-section" role="tabpanel" arial-labelledby="home-tab">
                                <p class="login-box-msg">Create Group</p>
                                <div class="form-horizontal">
                                    <div class="input-group mb-3">
                                        <input class="form-control input-lg" placeholder="House Name" type="text" name="houseName" id="houseName">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fa fa-user">

                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <input class="form-control input-lg" placeholder="House Greeting" type="text" name="greeting" id="greeting">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fa fa-user">

                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">

                                        <div class="col-12">
                                            <a class="btn btn-primary btn-block btn-flat" style="color: white" onclick="bankTab()">
                                                Next
                                            </a>
                                        </div>

                                    </div>

                                </div>
                            </div>
                            <div class="tab-pane fade" id="bank-section" role="tabpanel" arial-labelledby="bank-tab">
                                <p class="login-box-msg">Bank Account Information</p>
                                <div class="form-horizontal">
                                    <div class="input-group mb-3">
                                        <input class="form-control input-lg" placeholder="Enter Bank Name" type="text" name="bankName" id="bankName">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fa fa-bank">

                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        @*<input class="form-control input-lg" placeholder="" type="text" name="Name" id="Name">*@
                                        @Html.DropDownList("AccountType", null, new { @class = "form-control" })
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fa fa-tag">

                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <input class="form-control input-lg" placeholder="Enter Starting Balance" type="text" name="startingBalance" id="startingBalance">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fa fa-user">

                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <input class="form-control input-lg" placeholder="Enter Warning Balance" type="text" name="warningBalance" id="warningBalance">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fa fa-user">

                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">

                                        <div class="col-12">
                                            <a class="btn btn-primary btn-block btn-flat" style="color: white" onclick="categoryTab()">
                                                Next
                                            </a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="category-section" role="tabpanel" arial-labelledby="bank-tab">
                                <p class="login-box-msg">Category/Item</p>
                                <div class="form-horizontal">
                                    <div class="input-group mb-3">
                                        <input class="form-control input-lg" placeholder="Category Name" type="text" name="categoryName" id="categoryName">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fa fa-list">

                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <input class="form-control input-lg" placeholder="Category Item" type="text" name="itemName" id="itemName">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fa fa-user">

                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">

                                        <div class="col-12">
                                            <a class="btn btn-primary btn-block btn-flat" style="color: white" onclick="submitForm()">
                                                Finish
                                            </a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {

    <script>
    function bankTab() {
    $("#bank-tab").click();
    }
    function categoryTab() {
    $("#cat-tab").click();
    }
    function submitForm() {
    $("#userForm").submit();
    }


    </script>


}